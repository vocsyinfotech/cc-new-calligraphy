<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bottom_sheeet_bg">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnClose"
            android:fontFamily="@font/jost_semi_bold"
            android:gravity="center"
            android:text="Add Text"
            android:textColor="@color/appTheme"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btnDone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_done" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="32dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/edtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@id/btnColorPicker"
            android:background="@null"
            android:fontFamily="@font/jost_regular"
            android:gravity="center"
            android:hint="Write Your Text Here..."
            android:singleLine="true"
            android:textColorHint="#9E9E9E"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnColorPicker"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_color_picker" />
    </RelativeLayout>

    <com.Example.calligrapy.NonScrollListView
        android:id="@+id/fontgrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutTexts"
        android:numColumns="1"
        android:overScrollMode="never"
        android:scrollbars="none" />
</RelativeLayout>