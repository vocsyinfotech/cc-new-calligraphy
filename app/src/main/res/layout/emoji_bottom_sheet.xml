<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/bottom_sheeet_bg">

    <RelativeLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_smiley_sticker"
                        android:tint="@color/unselected" />

                    <ImageView
                        android:id="@+id/imgSelected1"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_fall" />

                    <ImageView
                        android:id="@+id/imgSelected2"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/dot_selector" />

                    <ImageView
                        android:id="@+id/imgSelected3"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_crown" />

                    <ImageView
                        android:id="@+id/imgSelected4"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/feathers_selector" />

                    <ImageView
                        android:id="@+id/imgSelected5"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker6"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_heart" />

                    <ImageView
                        android:id="@+id/imgSelected6"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLayout7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSticker7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/eyebrow_pencil" />

                    <ImageView
                        android:id="@+id/imgSelected7"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emojiList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:overScrollMode="never"
        android:scrollbars="none" />
</RelativeLayout>